<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/weatherFragment"
            android:name="com.trinityjayd.biggerpicturenews.Fragments.WeatherFragment"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Headlines"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:gravity="end">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/currencyFragment"
                android:name="com.trinityjayd.biggerpicturenews.Fragments.CurrencyFragment"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"/>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/bbcNewsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBC News"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/news24Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News24"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/changeCurrencyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Currency"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/newsAndRateContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>


</LinearLayout>